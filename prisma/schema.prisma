
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum ExpenseType {
  INCOME
  EXPENSE
}

model User {
  id           String         @id @default(uuid())
  email        String         @unique
  firstName    String
  lastName     String
  password     String
  phone        String
  refreshToken RefreshToken[]
  category     Category[]
  transaction  Transaction[]
  createdAt    DateTime       @default(now()) @db.Timestamptz(3)
  updatedAt    DateTime       @updatedAt @db.Timestamptz(3)
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  expiresAt DateTime
  createdAt DateTime @default(now()) @db.Timestamptz(3)
}

model Category {
  id           String        @id @default(uuid())
  userId       String
  categoryName String
  type         ExpenseType
  createdAt    DateTime      @default(now()) @db.Timestamptz(3)
  transaction  Transaction[]
  user         User          @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String      @id @default(uuid())
  userId      String
  categoryId  String
  amount      Decimal
  description String
  type        ExpenseType
  createdAt   DateTime    @default(now()) @db.Timestamptz(3)
  user        User        @relation(fields: [userId], references: [id])
  category    Category    @relation(fields: [categoryId], references: [id])
}
